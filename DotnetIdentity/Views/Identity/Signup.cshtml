@model SignupViewModel
@{
    ViewData["Title"] = "Signup";
    var roles = new List<string> { "Member", "Admin"};
}

<h1>Registrar</h1>

<form asp-controller="Identity" asp-action="Signup" method="post">
    @Html.ValidationSummary()
    <div class="form-group col-4">
        <label asp-for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Password">Senha:</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Department">Department:</label>
        <input type="text" asp-for="Department" class="form-control" />
    </div>

    <div class="form-group col-4">
        @Html.DropDownListFor(x => x.Role, roles.Select(s => new SelectListItem { Text = s, Value = s}), "Roles" , null)
    </div>

    <button type="submit" class="btn btn-primary" >Cadastrar</button>
</form>

<div class="alert alert-info">
    Se já possui uma conta, por favor vá para <a asp-action="Signin">Login</a>
</div>

